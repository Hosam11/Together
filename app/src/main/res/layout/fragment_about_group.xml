<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <de.hdodenhof.circleimageview.CircleImageView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/group_img_tv"
            android:layout_width="205dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:src="@drawable/group_image"
            app:civ_border_color="@color/white" />

        <TextView
            android:id="@+id/edit_group_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"

            android:layout_marginBottom="10dp"

            android:text="Edit Group"
            android:textColor="#1177da"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/background_shape"
            android:orientation="vertical"
            android:paddingBottom="28dp"

            >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="10dp"
                android:text="@string/description"
                android:textColor="@color/baseColor"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/group_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="13dp"
                android:textSize="12dp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/level"
                android:textColor="@color/baseColor"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/group_level_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="13dp"
                android:textSize="12dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/interesta"
                android:textColor="@color/baseColor"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/group_interest_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="13dp"
                android:textSize="12dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="13.5dp"
                android:background="#e8e8e8"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="13.5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/members"
                android:textColor="@color/baseColor"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/members_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"

                    />

            </RelativeLayout>


        </LinearLayout>

        <Button
            android:id="@+id/leave_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/leave_logout_shape"
            android:padding="10dp"
            android:text="@string/leave_group"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>

