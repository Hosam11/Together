                android:textSize="13sp"

                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            android:id="@+id/btn_create_group_fragment"
            layout="@layout/add_button"
            android:layout_width="80dp"
            android:layout_height="100dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


