<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            android:text="About"
            android:textColor="#000"
            android:textSize="22sp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_view_gp"
            android:layout_width="253dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/group"
            app:civ_border_color="#f9f9f9"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="30dp">

            <!-- Group Name -->
            <TextView
                android:id="@+id/tv_view_gp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="12dp"
                android:text="Group Name"
                android:textColor="#000"
                android:textSize="22sp" />

            <View style="@style/view_group_view" />

            Group DescTitle

            <TextView
                style="@style/view_group_title"
                android:text="Descritpion" />
            <!-- Group Desc content -->
            <TextView
                android:id="@+id/tv_view_gp_desc"
                style="@style/view_group_tv_content"
                android:letterSpacing="-0.02"
                android:text="group desc" />

            <View style="@style/view_group_view" />

            <!-- Group Interest Title -->
            <TextView
                style="@style/view_group_title"
                android:text="Interest" />
            <!-- Group Interest content -->
            <TextView
                android:id="@+id/tv_view_gp_interest"

                style="@style/view_group_tv_content"
                android:letterSpacing="-0.02"
                android:text="IOS" />

            <View style="@style/view_group_view" />

            <!-- Group Created on Title -->
            <TextView
                style="@style/view_group_title"
                android:text="Duration " />
            <!-- Group Created on content -->
            <TextView
                android:id="@+id/tv_view_gp_duration"
                style="@style/view_group_tv_content"
                android:letterSpacing="-0.02"
                android:text="4 weeks" />

            <View style="@style/view_group_view" />

            <!-- Group Location Title -->
            <TextView
                style="@style/view_group_title"
                android:text="Location" />
            <!-- Group Location content -->
            <TextView
                android:id="@+id/tv_view_gp_location"

                style="@style/view_group_tv_content"
                android:letterSpacing="-0.02"
                android:text="Egypt" />

            <View style="@style/view_group_view" />

            <!-- Group Required Level Title -->
            <TextView
                style="@style/view_group_title"
                android:text="Required Level" />
            <!-- Group Required Level content -->
            <TextView
                android:id="@+id/tv_view_gp_level"

                style="@style/view_group_tv_content"
                android:layout_marginBottom="26dp"
                android:letterSpacing="-0.02"
                android:text="begginer" />

            <Button
                android:id="@+id/btn_action_group"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/login_signup_shape"
                android:text="Join Group"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>