<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="37dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="@string/login"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_to_join_our_journey"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/background_shape"
            android:orientation="vertical"


            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="31dp"
                android:src="@mipmap/together" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="19.3dp"
                android:layout_marginTop="14dp"
                android:background="#e8e8e8"

                />
            <!--  <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="37dp"
                  android:layout_marginTop="30dp"
                  android:textSize="13sp"
                  tools:text="@string/email" />
  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="30dp"
                    android:textSize="13sp"
                    android:text="@string/email" />

                <ProgressBar
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/pb_login"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_texts_shapes"
                android:hint="@string/email"
                android:inputType="textEmailAddress"

                android:paddingLeft="18dp"
                android:paddingTop="18dp"
                android:paddingBottom="16dp"
                android:text="h@h.com"

                android:textColor="#000"
                android:textCursorDrawable="@drawable/cursor_color"


                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="19.3dp"
                android:layout_marginBottom="31.8dp"
                android:background="#e8e8e8"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:textSize="13sp"
                android:text="@string/password"

                />


            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_texts_shapes"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="18dp"
                android:paddingTop="18dp"


                android:text="hos"


                android:textColor="#000"
                android:textCursorDrawable="@drawable/cursor_color"


                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="19.3dp"
                android:background="#e8e8e8"

                />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="59dp"
                android:layout_marginBottom="51dp"
                android:background="@drawable/login_signup_shape"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"


                />


        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>