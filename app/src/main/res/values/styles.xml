    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/majorColor</item>
        <item name="colorPrimaryDark">@color/majorColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- [Start] AddGroup  -->
    <style name="add_group_common_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">4</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="add_group_et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="add_group_icon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="add_group_tv_styles">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="add_group_spinners">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- [End] AddGroup  -->

    <!--[Start]  ViewGroup  -->
    <style name="view_group_common_outer_linear_layout">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="view_group_common_inner_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="view_group_icon">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="view_group_common_tv">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--[End]  ViewGroup  -->


    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/majorColor</item>
    </style>


</resources>
