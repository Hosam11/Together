    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/majorColor</item>
        <item name="colorPrimaryDark">@color/majorColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
<!--        <item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/majorColor</item>
        <item name="tabIndicatorHeight">38dp</item>
 <!--       <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>-->
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/list_item_background</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- [Start] Create Group Screen-->
    <style name="create_group_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:lineSpacingExtra">-6sp</item>
    </style>

<!--    android:textCursorDrawable="@drawable/cursor_color"-->

    <style name="create_group_common_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">#f9f9f9</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
<!--        <item name="android:layout_marginBottom">31dp</item>-->
        <item name="android:padding">12dp</item>
    </style>


    <style name="create_group_view_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">19.3dp</item>
        <item name="android:layout_marginBottom">31dp</item>
        <item name="android:background">#e8e8e8</item>

    </style>

    <style name="create_group_tv_counter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">-6sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!-- [End] Create Group -->

    <!-- [Start]  Show Group Screen-->

    <style name="view_group_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="view_group_tv_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">14sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="view_group_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:background">#f9f9f9</item>
    </style>

    <!-- [End]  Show Group Screen-->


    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/majorColor</item>
    </style>
    <style name="InterestDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorAccent">@color/majorColor</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/majorColor</item>
    </style>
    <!-- [End]  Notification styles-->
    <style name="SelectableItemTheme">
        <item name="color">#F44336</item>
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


</resources>
